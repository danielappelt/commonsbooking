<form method="get" action="/wp-admin/admin.php">

    <h3>Filter</h3>
    <input type="hidden" name="page" value="cb-dashboard"/>
    <label for="location">Standort</label>
    <select name="location" id="location">
        <option value="">-</option>
        {% for location in locations %}
            <option value="{{ location.ID }}" {% if location.ID == currentLocation %} selected="selected"{% endif %}>{{ location.post_title }}</option>
        {% endfor %}
    </select>

    <label for="item">Item</label>
    <select name="item" id="item">
        <option value="">-</option>
        {% for item in items %}
            <option value="{{ item.ID }}" {% if item.ID == currentItem %} selected="selected"{% endif %}>{{ item.post_title }}</option>
        {% endfor %}
    </select>
    <input type="submit" value="Anzeigen" class="button" />
</form>


{% for week in calendar.weeks %}
    {% for day in week.days %}
        {% include '/dashboard/components/day.html.twig' with {'day': day} %}
    {% endfor %}
{% endfor %}

